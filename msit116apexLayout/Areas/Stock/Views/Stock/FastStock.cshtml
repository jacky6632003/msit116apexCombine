@model msit116apexLayout.Areas.Stock.Controllers.StockController.DashboardModel

@{
    ViewBag.Title = "FastStock";
}

<table style="border:1px solid black;width:195px;height:145px">
    <thead  >
        <tr>
            <th   style="border:1px solid black">股市快速資訊</th>
        </tr>
    </thead>
    <tbody>
        <tr >
            <td style="border:1px solid black">
                <label>@Html.DisplayFor(item => item.SSSRandomName1)</label>
                @if (Model.SSSRandomPrice1 <= 50)
                {
                    <label style="color:forestgreen">@Html.DisplayFor(item => item.SSSRandomPrice1)</label>
                }
