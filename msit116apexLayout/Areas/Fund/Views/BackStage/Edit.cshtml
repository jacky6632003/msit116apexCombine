            <div class="col" style="margin-left:100px">
                <div class="form-group">
                    <h5>
                        @Html.LabelFor(model => model.FundID, "基金名稱", htmlAttributes: new { @class = "control-label col-md-2" })
                    </h5>

                    <div class="col-md-10">
                        <h5>
                            @Html.DisplayFor(model => model.FundMaster.FundName)
                        </h5>

                        @Html.DropDownList("FundID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FundID, "", new { @class = "text-danger" })
