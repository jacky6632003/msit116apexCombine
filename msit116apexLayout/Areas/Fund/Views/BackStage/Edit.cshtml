        </div>
        @*<img name="idfundImage" src="@Href("~/Areas/Fund/Images/fundfund.png")" alt="Wellcome"  />*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GoodID)
