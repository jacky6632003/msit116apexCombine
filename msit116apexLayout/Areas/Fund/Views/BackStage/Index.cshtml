@model IEnumerable<msit116apexLayout.Models.FundGoods>

@{
    ViewBag.Title = "基金管理";
}

<div>
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb" style="background-color:	#444444">
            @*<li class="breadcrumb-item"><a href="@Url.Action("Index","HomeFund")">Home</a></li>*@
            <li class="breadcrumb-item active" aria-current="page" style="color:#DDAA00">基金管理</li>
        </ol>
    </nav>
</div>
<div>
    <p>
        @Html.ActionLink("基金上架", "Create","BackStage",null,new { @class = "btn btn-success" }) 
        @*@Html.ActionLink("基金資料庫", "Index","CreateNewFund",null,new { @class = "btn btn-secondary" })*@
    </p>
    
</div>

<table class="table">
    <thead class="bg-warning">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.GoodID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundMaster.FundName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundArea.FundAreaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundType.FundTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundCompany.FundCpyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundCurrency.FundCurrencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChargeFee.ChargeFeePercentage)<span>(%)</span>
            </th>
            <th>
                功能
            </th>
                                  
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td style="background-color:#060C25; color:white">
                    @Html.DisplayFor(modelItem => item.GoodID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundMaster.FundName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundArea.FundAreaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundType.FundTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundCompany.FundCpyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundCurrency.FundCurrencyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChargeFee.ChargeFeePercentage)<span>%</span>
                </td>           
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GoodID },new { @class= "btn btn-outline-warning" }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.GoodID },new { @class = "btn btn-outline-info" }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.GoodID }, new { @class = "btn btn-outline-danger" })
                   
                </td>
            </tr>
        }
    </tbody>


</table>
