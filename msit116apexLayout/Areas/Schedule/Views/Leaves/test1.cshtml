@using (Html.BeginForm("DeptLeave", "Leaves", FormMethod.Get, new { @class = "form-horizontal" }))
{
    <div class="alert alert-secondary">
        <div class="form-inline">



            @Html.DropDownList("sss", null, htmlAttributes: new { @class = "form-control inline", @sss = "sss" })


            &nbsp;&nbsp;&nbsp;&nbsp;
            <select id="year" name="year" class="color1 form-control inline" style="width:150px;"></select>

            <label>年     </label>
            &nbsp;&nbsp;&nbsp;&nbsp;


            @for (var i = 1; i <= 12; i++)
            {

                <input type="submit" name="i" value='@i' class="btn"><span>月</span>
            }

            <br /><br />

        </div>

        <div>

            &nbsp;&nbsp; &nbsp;&nbsp;
            @*<input id="showonlyapp" type="checkbox" name="showonlyapp" /><label for="showonlyapp">只顯示有假人員</label>*@




            &nbsp;&nbsp; &nbsp;&nbsp; <a href="#modal" class="btn btn-flat btn-danger"><i class="fa fa-search" aria-hidden="true"></i>年休假剩餘查詢</a>

        </div>

    </div>
}
<div class="remodal" data-remodal-id="modal" role="dialog" aria-labelledby="modal1Title" aria-describedby="modal1Desc">
    <button data-remodal-action="close" class="remodal-close" aria-label="Close"></button>
    <div>
        <div class="alert alert-secondary">
            <div class="form-inline">



                @Html.DropDownList("testss", null, htmlAttributes: new { @class = "form-control inline", @sss = "sss" })


                &nbsp;&nbsp;&nbsp;&nbsp;
                <select id="year1" name="year1" class="color1 form-control inline" style="width:150px;"></select>

            </div>

        </div>


        <br>
        <div id="app">

            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            部門
                        </th>
                        <th>
                            員工姓名
                        </th>
                        <th>
                            年假天數
                        </th>
                        <th>
                            已休年假小時數(9小時/一天)
                        </th>
                    </tr>
                    <tr v-for="cls in classdatas">
                        <td>{{cls.DepartmentName}}</td>
                        <td>{{cls.UserName}}</td>
                        <td>{{cls.LeaveDay}}</td>
                        <td style="color:red">{{cls.AnnualleaveUsingDay}}</td>
                    </tr>

                </thead>
            </table>
        </div>

        <button data-remodal-action="confirm" class="remodal-confirm">關閉</button>
    </div>
</div>


